<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_ball_item"
        android:layout_width="@dimen/ball_item_size"
        android:layout_height="@dimen/ball_item_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_normal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/margin_normal"
        android:text="Shopping"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ball_item"
        app:layout_constraintStart_toEndOf="@+id/iv_ball_item"
        app:layout_constraintTop_toTopOf="@+id/iv_ball_item" />

    <ImageView
        android:id="@+id/iv_delete_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>