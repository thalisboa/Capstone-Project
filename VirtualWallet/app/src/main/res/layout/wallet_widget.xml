<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/primary_light"
    android:padding="16dp">

    <TextView
        android:id="@+id/appwidget_text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appwidget_text_month"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/appwidget_text_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/balance"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"

            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appwidget_text_balance_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp" />

        <ImageView
            android:id="@+id/appwidget_add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_circle_outline"
            android:padding="16dp"
            android:contentDescription="@string/plus_button"/>

    </LinearLayout>


</RelativeLayout>